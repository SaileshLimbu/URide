<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_xlarge"
    android:layout_marginRight="@dimen/margin_xlarge"
    app:cardCornerRadius="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/drawable_bg_driver_verify_dialog">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_circle_tick"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_xmedium"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_en_congratulations"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_medium"
            android:layout_below="@+id/rl"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verified_desc"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/textColorPrimary"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_medium"
            android:layout_below="@+id/text"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_en_best_of_luck"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_medium"
            android:layout_below="@+id/text1"/>

        <ImageView
            android:id="@+id/imgOk"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_btn_ok"
            android:layout_below="@+id/text2"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_xlarge"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>