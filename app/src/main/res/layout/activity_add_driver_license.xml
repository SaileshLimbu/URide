<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/toolbar"
                android:background="@color/colorPrimary" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="@string/str_en_upload_vehicle_license"
                        android:textSize="@dimen/text_size_large" />

                    <ImageView
                        android:id="@+id/image_license"
                        android:layout_width="match_parent"
                        android:layout_height="148dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/vehicle_license_placeholder" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/drawable_button"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:onClick="choosePhotoOption"
                        android:focusable="true">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="25dp"
                                android:layout_height="22dp"
                                android:layout_centerVertical="true"
                                android:paddingRight="5dp"
                                android:src="@drawable/ic_camera" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/image1"
                                android:fontFamily="@font/quicksand_medium"
                                android:text="@string/str_en_take_photo"
                                android:textColor="#FFF"
                                android:textSize="@dimen/text_size_large" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/label_license_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="@string/str_en_license_number"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/txtLicenseNumber"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@id/label_license_number"
                            android:background="@drawable/drawable_edittext"
                            android:fontFamily="@font/quicksand"
                            android:hint="@string/str_en_enter_license_number"
                            android:inputType="number"
                            android:textColorHint="#999"
                            android:textSize="@dimen/text_size_medium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/label_vehicle_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="@string/str_en_valid_vehicle_type"
                            android:textSize="@dimen/text_size_medium" />

                        <Spinner
                            android:id="@+id/spinnerVehicleType"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@id/label_vehicle_type"
                            android:entries="@array/vehicle_type"
                            android:fontFamily="@font/quicksand_medium"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/label_issued_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="@string/str_en_issued_date"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/txtIssuedDate"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@id/label_issued_date"
                            android:background="@drawable/drawable_edittext"
                            android:fontFamily="@font/quicksand"
                            android:hint="10-12-2015"
                            android:inputType="date"
                            android:textColorHint="#999"
                            android:textSize="@dimen/text_size_medium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/label_expiry_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="@string/str_en_expiry_date"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/txtExpiryDate"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@id/label_expiry_date"
                            android:background="@drawable/drawable_edittext"
                            android:fontFamily="@font/quicksand"
                            android:hint="10-12-2017"
                            android:inputType="date"
                            android:textColorHint="#999"
                            android:textSize="@dimen/text_size_medium" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/drawable_button"
                        android:fontFamily="@font/quicksand_medium"
                        android:onClick="uploadLicense"
                        android:text="@string/str_en_continue"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size_large" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</layout>