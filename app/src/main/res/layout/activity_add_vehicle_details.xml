<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/toolbar"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                app:cardCornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="@string/str_en_upload_vehicle_photo"
                        android:textColor="#444"
                        android:textSize="@dimen/text_size_xlarge"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/image_vehicle"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/vehicle_photo_placeholder" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/drawable_button"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:focusable="true"
                        android:onClick="choosePhotoOption">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="25dp"
                                android:layout_height="22dp"
                                android:layout_centerVertical="true"
                                android:paddingEnd="5dp"
                                android:src="@drawable/ic_camera" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/image1"
                                android:fontFamily="@font/quicksand_medium"
                                android:text="@string/str_en_take_photo"
                                android:textColor="#FFF"
                                android:textSize="@dimen/text_size_large" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/label_vehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="@string/str_en_select_vehicle"
                            android:textSize="@dimen/text_size_medium" />

                        <Spinner
                            android:id="@+id/spinnerVehicle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_vehicle" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/label_brand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="@string/str_en_enter_brand"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/txtBrand"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@id/label_brand"
                            android:background="@drawable/drawable_edittext"
                            android:fontFamily="@font/quicksand"
                            android:hint="@string/str_en_enter_brand"
                            android:inputType="text"
                            android:textColorHint="#999"
                            android:textSize="@dimen/text_size_medium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/label_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="@string/str_en_modal"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/txtModal"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@id/label_model"
                            android:background="@drawable/drawable_edittext"
                            android:fontFamily="@font/quicksand"
                            android:hint="@string/str_en_enter_modal_name"
                            android:inputType="text"
                            android:textColorHint="#999"
                            android:textSize="@dimen/text_size_medium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/label_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="@string/str_en_year"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/txtYear"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@id/label_year"
                            android:background="@drawable/drawable_edittext"
                            android:fontFamily="@font/quicksand"
                            android:hint="@string/str_en_enter_year"
                            android:inputType="date"
                            android:textColorHint="#999"
                            android:textSize="@dimen/text_size_medium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/label_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="@string/str_en_color"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/txtColor"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_below="@id/label_color"
                            android:background="@drawable/drawable_edittext"
                            android:fontFamily="@font/quicksand"
                            android:hint="@string/str_en_enter_color"
                            android:inputType="text"
                            android:textColorHint="#999"
                            android:textSize="@dimen/text_size_medium" />

                    </RelativeLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/drawable_button"
                        android:fontFamily="@font/quicksand_medium"
                        android:onClick="uploadVehicleDetails"
                        android:text="@string/str_en_continue"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size_large" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</layout>