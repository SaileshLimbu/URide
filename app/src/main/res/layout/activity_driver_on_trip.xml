<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.drivers.DriverOnTripActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="My Trip"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/lblCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/quicksand_bold"
                android:onClick="cancelRide"
                android:text="Cancel"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:elevation="4dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toTopOf="@+id/btnStartTrip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtGetDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/str_en_horn_user"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/imgMike"
                    app:layout_constraintEnd_toStartOf="@+id/imgMike"
                    app:layout_constraintTop_toTopOf="@+id/imgMike"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/lblPickUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="@string/str_en_pick_up"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_size_large"
                    app:layout_constraintBottom_toTopOf="@+id/viewSeperator"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgMike"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:onClick="hornUser"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_mike"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/circleProgress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:progress_background_color="@color/colorPrimary" />

                <View
                    android:id="@+id/viewSeperator"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:background="#ddd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgMike" />


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imgProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewSeperator"
                    fresco:failureImage="@drawable/profile_placeholder"
                    fresco:placeholderImage="@drawable/profile_placeholder"
                    fresco:roundAsCircle="true"
                    fresco:roundingBorderColor="#ddd"
                    fresco:roundingBorderWidth="2dp"
                    tools:background="#999" />

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_toEndOf="@+id/imgProfile"
                    android:layout_toRightOf="@+id/imgProfile"
                    app:layout_constraintBottom_toBottomOf="@+id/imgProfile"
                    app:layout_constraintStart_toEndOf="@+id/imgProfile"
                    app:layout_constraintTop_toTopOf="@+id/imgProfile">

                    <TextView
                        android:id="@+id/txtUserFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="Kevin Hart"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/imageTime"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_below="@id/txtUserFullName"
                        android:src="@drawable/ic_time" />

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtUserFullName"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toEndOf="@+id/imageTime"
                        android:layout_toRightOf="@+id/imageTime"
                        android:text="20 mins"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_size_medium" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/rl1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rl1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp">

                        <TextView
                            android:id="@+id/txtDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="$ 28.59"
                            android:textColor="#000"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtDistance"
                            android:text="@string/str_en_distance"
                            android:textSize="@dimen/text_size_medium" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imgCall"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_xlarge"
                        android:onClick="callUser"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_phone" />

                    <ImageView
                        android:id="@+id/imgMessage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:onClick="sendSMS"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sms" />
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnStartTrip"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/cardView3"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="@drawable/drawable_button"
            android:fontFamily="@font/quicksand_bold"
            android:onClick="onButtonClick"
            android:text="@string/str_en_get_direction_caps"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>